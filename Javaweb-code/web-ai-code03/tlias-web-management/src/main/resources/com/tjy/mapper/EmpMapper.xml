<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjy.mapper.EmpMapper">

    <!--统计员工性别信息-->
    <select id="countGenderData" resultType="java.util.Map">
        select
            (if(gender = 1, '男性员工', '女性员工')) as name,
            count(*) value
        from emp group by gender;
    </select>

    <!--获取员工职位信息-->
    <select id="countJobData" resultType="java.util.Map">
        select
            (case when job = 1 then '班主任'
                  when job = 2 then '讲师'
                  when job = 3 then '学工主管'
                  when job = 4 then '教研主管'
                  when job = 5 then '咨询师'
                  else '其他' end) position,
            count(*) count
        from emp group by job order by count;
    </select>

    <!--根据id 更新员工基本信息-->
    <!--set标签: 会自动生成set关键字; 会自动删除更新字段后多于的','-->
    <update id="updateById">
        UPDATE emp
        <set>
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="job != null">job = #{job},</if>
            <if test="salary != null">salary = #{salary},</if>
            <if test="image != null and image != ''">image = #{image},</if>
            <if test="entryDate != null">entry_date = #{entryDate},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        WHERE id = #{id};
    </update>

    <!--定义ResultMap-->
    <resultMap id="empResultMap" type="com.tjy.pojo.Emp">
        <!--封装员工基本信息-->
        <!--补充：column为sql语句中的字段，property为实体类中的成员变量-->
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="name" property="name" />
        <result column="gender" property="gender" />
        <result column="phone" property="phone" />
        <result column="job" property="job" />
        <result column="salary" property="salary" />
        <result column="image" property="image" />
        <result column="entry_date" property="entryDate" />
        <result column="dept_id" property="deptId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <!--封装员工工作经历信息 exprList-->
        <collection property="exprList" ofType="com.tjy.pojo.EmpExpr">
            <id column="ex_id" property="id" />
            <result column="ex_empId" property="empId" />
            <result column="ex_begin" property="begin" />
            <result column="ex_end" property="end" />
            <result column="ex_company" property="company" />
            <result column="ex_job" property="job" />
        </collection>
    </resultMap>

    <!--根据id查询员工的基本信息以及工作经历信息-->
    <select id="getInfo" resultMap="empResultMap">
        select
            e.*,
            ex.id ex_id,
            ex.emp_id ex_empId,
            ex.begin ex_begin,
            ex.end ex_end,
            ex.company ex_company,
            ex.job ex_job
        from emp e left join emp_expr ex on e.id = ex.emp_id
        where e.id = #{id}
    </select>

    <!-- 根据id批量删除员工基本信息-->
    <delete id="deleteByIds">
        delete from emp where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 分页查询员工信息 -->
    <select id="list" resultType="com.tjy.pojo.Emp">
        select e.*, d.name deptName from emp e left join dept d on e.dept_id = d.id
        <where>
            <if test="name != null and name != ''">
                e.name like concat('%', #{name}, '%')
            </if>
            <if test="gender != null">
                and e.gender = #{gender}
            </if>
            <if test="begin != null and end != null">
                and e.begin = #{begin} and e.end = #{end}
            </if>
        </where>
        order by e.update_time desc
    </select>



    <!-- 新增员工基本信息 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into emp(username, name, gender, phone, job, salary, image, entry_date, dept_id, create_time, update_time)
        values (#{username}, #{name}, #{gender}, #{phone}, #{job}, #{salary}, #{image}, #{entryDate}, #{deptId}, #{createTime}, #{updateTime})
    </insert>

    <!--查询全部员工-->
    <select id="getEmpList" resultType="com.tjy.pojo.Emp">
        select id, username, password, name, gender, job, salary, image, entry_date, dept_id, create_time, update_time from emp
    </select>

</mapper>